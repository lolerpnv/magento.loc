<?xml version="1.0" encoding="UTF-8"?>

<config>
    <modules>
        <Toni_Ticket>
            <version>1.0.0.0</version>
        </Toni_Ticket>
    </modules>
    <global>

        <helpers>
            <toni_ticket>
                <class>Toni_Ticket_Helper</class>
            </toni_ticket>
        </helpers>

        <blocks>
            <ticket>
                <class>Toni_Ticket_Block</class>
            </ticket>
        </blocks>
        <models>

            <ticket>

                <class>Toni_Ticket_Model</class>

                <resourceModel>ticket_resource</resourceModel>

            </ticket>

            <ticket_resource>

                <class>Toni_Ticket_Model_Resource</class>

                <entities>

                    <ticket>

                        <table>ticket_ticket</table>

                    </ticket>

                    <response>

                        <table>ticket_response</table>

                    </response>

                </entities>

            </ticket_resource>

        </models>

        <resources>

            <toni_ticket_setup>

                <setup>

                    <module>Toni_Ticket</module>

                </setup>

            </toni_ticket_setup>

        </resources>
    </global>
    <frontend>
        <routers>
            <ticket>
                <use>standard</use>

                <args>

                    <module>Toni_Ticket</module>

                    <frontName>ticket</frontName>

                </args>
            </ticket>
        </routers>
        <layout>
            <updates>
                <ticket module="ticket">
                    <file>ticket.xml</file>
                </ticket>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <layout>
            <updates>
                <ticket>
                    <file>ticket.xml</file>
                </ticket>
            </updates>
        </layout>
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <ticket after="Mage_Adminhtml">Toni_Ticket_Adminhtml</ticket>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
</config>